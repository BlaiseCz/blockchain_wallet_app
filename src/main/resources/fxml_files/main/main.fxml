<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import com.wallet.blockchain_wallet.gui.components.NumberTextField?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.text.Text?>
<AnchorPane fx:id="mainBackground" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.wallet.blockchain_wallet.gui.components.MainController">
    <children>
        <MenuBar layoutY="-2.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="-2.0"
                 VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="Options">
                    <SeparatorMenuItem mnemonicParsing="false"/>
                    <MenuItem mnemonicParsing="false" onAction="#closeApp" text="Quit"/>
                    <SeparatorMenuItem mnemonicParsing="false"/>
                </Menu>
            </menus>
        </MenuBar>
        <VBox AnchorPane.leftAnchor="12.5" AnchorPane.topAnchor="43.0">
            <Text>Set HostInfo:</Text>
            <NumberTextField fx:id="portTextField" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="50.0"
                             text="1234"/>
            <TextField fx:id="hostTextField" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="82.5" text="host"/>
            <Button fx:id="nodeRequestButton" AnchorPane.leftAnchor="30.0" text="Nodes Request"
                    onAction="#nodesRequest"
                    AnchorPane.topAnchor="122.5"/>
            <Text AnchorPane.topAnchor="233.5">HostInfo list:</Text>
            <ListView fx:id="hostInfoListView" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="260"/>
        </VBox>
        <VBox AnchorPane.leftAnchor="280.0" AnchorPane.topAnchor="50.0">
            <Button fx:id="notifyWalletButton" AnchorPane.leftAnchor="30.0" text="Notify Wallet"
                    onAction="#notifyWallet"
                    AnchorPane.topAnchor="102.5"/>
        </VBox>
    </children>
    <stylesheets>
        <URL value="@main.css"/>
    </stylesheets>
</AnchorPane>
